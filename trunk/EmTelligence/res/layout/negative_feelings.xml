<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:text="@string/i_feel..."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:stretchColumns="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" >

                <ToggleButton
                    android:id="@+id/buttonAngry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/angry_hov"
                    android:textOff="@string/angry"
                    android:textOn="@string/angry" />

                <ToggleButton
                    android:id="@+id/buttonAnxious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/anxious_hov"
                    android:textOff="@string/anxious"
                    android:textOn="@string/anxious" />

                <ToggleButton
                    android:id="@+id/buttonConfused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/confused_hov"
                    android:textOff="@string/confused"
                    android:textOn="@string/confused" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" >

                <ToggleButton
                    android:id="@+id/buttonEnvious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/jealous_hov"
                    android:textOff="@string/envious"
                    android:textOn="@string/envious" />

                <ToggleButton
                    android:id="@+id/buttonLazy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/lazy_hov"
                    android:textOff="@string/lazy"
                    android:textOn="@string/lazy" />

                <ToggleButton
                    android:id="@+id/buttonSad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/sad_hov"
                    android:textOff="@string/sad"
                    android:textOn="@string/sad" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

<!--                 <ToggleButton
                    android:id="@+id/buttonHappy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/happy_hov"
                    android:textOff="@string/happy"
                    android:textOn="@string/happy" /> -->

                <ToggleButton
                    android:id="@+id/buttonSurprised"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/surprised_hov"
                    android:textOff="@string/surprised"
                    android:textOn="@string/surprised" />

                <ToggleButton
                    android:id="@+id/buttonTired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/tired_hov"
                    android:textOff="@string/tired"
                    android:textOn="@string/tired" />
            </TableRow>

           
        </TableLayout>
        
	</ScrollView>

    <Button
        android:id="@+id/buttonSubNeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/submit" />

</RelativeLayout>